@model otobusrezervasyonsistemi.Models.Users
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - otobusrezervasyonsistemi</title>
    <Link rel="stylesheet" href="/css/logReg.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/otobusrezervasyonsistemi.styles.css" asp-append-version="true" />
</head>
<body>
        <main role="main" class="pb-3">
            <h1 class="title">OTOREZ</h1>
            <div class="togglePage">
                <div class="loginPage active" id="loginPage" onclick="loginPage()">Giriş</div>
                <div class="registerPage" id="registerPage" onclick="registerPage()">Kayıt</div>
            </div>
            <div class="forms">
            <form asp-controller="LogReg" class="loginForm" id="loginForm" method="post" asp-action="Index">
                    <div class="loginCard">
                        <h1>Giriş</h1>
                        <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control" name="Username">
                        <span style="color:red;" asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" name="Password">
                        <span style="color:red;" asp-validation-for="Password"></span>
                        </div>
                        <div class="buttons">
                            <button type="submit" class="btn btn-primary">Giriş</button>
                        </div>
                    </div>
                </form>
            <form asp-controller="LogReg" class="signUpForm" id="registerForm" asp-action="Register">
                <div class="signUpCard">
                    <h1>Kayıt</h1>
                    <div class="inputRow">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" name="Username">
                            <span style="color:red;" asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" name="Email">
                            <span style="color:red;" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="inputRow">
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" name="Phone">
                            <span style="color:red;" asp-validation-for="Phone"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" name="Password">
                            <span style="color:red;" asp-validation-for="Password"></span>
                        </div>
                    </div>
                        <div class="buttons">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                </div>
            </form>
        </div>

       
            @if (ViewData["ValidateMessage"] != null)
            {
            <div id="modalContainer" class="modal">
                <div class="modal-content">
                    <span id="closeModalBtn" class="close">&times;</span>
                    @ViewData["ValidateMessage"]
                </div>
            </div>
            }
           
        </main>
    <footer class="footer">
    <p class="col-md-4 mb-0 text-muted">© @DateTime.Now.Year Otorez, Inc</p>
    <img src="/common/bus.png" width="48" height="auto"/>
  </footer>
        <script src="/js/loginRegister.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

