@model otobusrezervasyonsistemi.Models.Passengers
@{
    ViewData["Title"] = "Bilet";
}

<link rel="stylesheet" href="/css/Ticket.css" />

<div class="ticketContainer">
    <div class="content">
        <div class="row">
            <div class="col-8">
                <div class="ticketInfo">
                    <div class="title">Güzergah/Otobüs Bilgisi</div>
                    <table width="100%">
                        <tbody>
                            <tr>
                                <th>Otobüs</th>
                            </tr>
                            <tr>
                                <td>Kamil KOÇ</td>
                            </tr>
                            <tr>
                                <th>Kalkış</th>
                                <th>Varış</th>
                            </tr>
                            <tr>
                                <td>Alibeyköy</td>
                                <td>Ankara</td>
                            </tr>
                            <tr>
                                <th>Hareket Zamanı</th>
                                <th>Koltuk</th>
                            </tr>
                            <tr>
                                <td>20 Temmuz</td>
                                <td>35, 36</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-4">
                <div class="passengerInfo">
                    <div class="title">Yolcu Bilgisi</div>
                    <form asp-controller="MyTicket" asp-action="Index">
                    <div class="mb-3">
                        <label asp-for="PassengerName" class="form-label">Ad Soyad</label>
                        <input asp-for="PassengerName" class="form-control" name="PassengerName">
                        <span style="color:red;" asp-validation-for="PassengerName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TCNo" class="form-label">TC</label>
                        <input asp-for="TCNo" class="form-control" name="TCNo">
                        <span style="color:red;" asp-validation-for="TCNo"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Satın Al</button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}